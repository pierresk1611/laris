# Local Agent Configuration
# Copy this file to .env and fill in the values

# URL of the Cloud PWA (Production)
NEXT_PUBLIC_API_URL="https://laris-automat.vercel.app/api"

# Agent Security Token (Must match the one generated in PWA Settings -> Local Agent)
AGENT_ACCESS_TOKEN="your_agent_token_here"

# Path to the Dropbox folder where TEMPLATES and OUTPUT are located
# Example: /Users/Mirka/Dropbox/AutoDesign_App
LOCAL_ROOT_PATH="/Users/Mirka/Dropbox/AutoDesign_App"

# Polling Interval (in milliseconds)
POLL_INTERVAL=10000

# Path to Photoshop App (Optional, defaults to "Adobe Photoshop 2024")
PHOTOSHOP_APP_NAME="Adobe Photoshop 2024"
